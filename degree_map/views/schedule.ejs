<!doctype html>
<html>
<head>
    <title>My Schedule</title>
    <link rel="stylesheet" href="public/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="public/stylesheets/jquery.gridster.css">
    <link rel="stylesheet" type="text/css" href="public/stylesheets/schedulestyle.css">
    <style>
        body        { padding-top:60px; word-wrap:break-word; }
    </style>
</head>
<body>
<% include header %>
<div class="container-fluid">

    <div class="page-header text-center">
        <h1>My Schedule</h1>
    </div>

    <section class="schedulegrid">
        <div class="gridster semesters">
            <ul>
                <% for(var i=1; i <= 10; i++) {%>
                <li class="semester" data-row="1" data-col="1" data-sizex="1" data-sizey="1">
                    <h1>Semseter <%=i%></h1>
                </li>
                <% } %>
            </ul>
        </div>
        <div class="gridster classes">
            <ul>
                <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
                    <h1>Linear Algebra</h1>
                    <p>MATH 4123</p>
                    <button id="test" type="button" class="btn btn-default" data-toggle="popover"
                        title="Course info" data-container="body"
                        data-content="The course is very good and stuff">i</button>
                </li>
                <li data-row="3" data-col="1" data-sizex="1" data-sizey="1"><h1>Goodbye</h1></li>
                <li data-row="4" data-col="1" data-sizex="1" data-sizey="1"><h1>Goodbye</h1></li>
                <li data-row="5" data-col="1" data-sizex="1" data-sizey="1"><h1>Goodbye</h1></li>

                <li data-row="1" data-col="2" data-sizex="1" data-sizey="1"><h1>Hello</h1></li>
                <li data-row="2" data-col="2" data-sizex="1" data-sizey="1"><h1>Hello</h1></li>
                <li data-row="3" data-col="2" data-sizex="1" data-sizey="1"><h1>Hello</h1></li>
                <li data-row="4" data-col="2" data-sizex="1" data-sizey="1"><h1>Hello</h1></li>

                <li data-row="1" data-col="5" data-sizex="1" data-sizey="1"><h1>Such Column</h1></li>
            </ul>
        </div>
    </section>
</div>
<% include footer %>

    <script type="text/javascript" src="public/javascripts/jquery-1.11.1.js"></script>
    <script type="text/javascript" src="public/javascripts/jquery.gridster.js" charster="utf-8"></script>
    <script type="text/javascript" src="public/javascripts/bootstrap.min.js"></script>
    <script type="text/javascript">
	$('.btn-default').popover({
                    html: true,
                    trigger: 'manual'
                }).click(function(e) {
                    $(this).popover('show');
                    $('.popover-title').append('<button type="button" class="close">&times;</button>');
                    $('.close').click(function(e){
                        $('.btn-default').popover('hide');
                    });
                    e.preventDefault();
                });
    </script>
    <script type="text/javascript">
        $(function() {
                $(".gridster.classes > ul").gridster({
                    namespace: '.classes',
                    widget_margins: [7, 7],
                    widget_base_dimensions: [130, 100],
                    max_cols: 10,
                    min_cols: 8
                });
            });
    </script>
    <script type="text/javascript">
        $(function() {
                $(".gridster.semesters > ul").gridster({
                    namespace: '.semesters',
                    widget_margins: [7, 7],
                    widget_base_dimensions: [130, 50],
                    max_cols: 10,
                    min_cols: 8
                }).data('semesters').disable();
            });
    </script>
    <script type="text/javascript">
        $(document).ready(function(){
            $(".gridster.classes li").hover(function(){
                $(".gridster.classes li").css("box-shadow", "0 0 10px #fe2e2e");
            },function(){
                $(".gridster.classes li").css("box-shadow", "0 0 0px #fe2e2e");
            });

            $('#test').popover();
        });
    </script>

</body>
</html>
